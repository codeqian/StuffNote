<?xml version="1.0" encoding="utf-8"?>
<!--矩形  -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <stroke
        android:width="2dp"
        android:color="@color/colorText" /><!--矩形的边线  -->
    <size
        android:height="40dp"
        android:width="60dp" /><!--矩形的宽高  -->
    <gradient
        android:endColor="@color/colorLine"
        android:startColor="@color/colorLine" /><!-- 矩形的内部颜色，这里设置成白色，即空心 -->
</shape>