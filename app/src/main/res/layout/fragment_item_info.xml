<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTranslateWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/btn_bg_round_stroke"
        android:paddingTop="@dimen/BasePadding"
        android:paddingBottom="@dimen/BasePadding"
        android:paddingLeft="@dimen/DoublePadding"
        android:paddingRight="@dimen/DoublePadding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <net.codepig.stuffnote.View.CustomView.ScaleTextView
                android:text="Title"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:textColor="@color/colorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/editItemBtn"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/HalfMargin"
                android:src="@mipmap/edit"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/closeItemBtn"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/HalfMargin"
                android:src="@mipmap/close"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <net.codepig.stuffnote.View.CustomView.ScaleTextView
            app:textSizePx="32"
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitle"
            android:text="位置" />

        <net.codepig.stuffnote.View.CustomView.ScaleTextView
            app:textSizePx="32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitle"
            android:text="功能" />

        <net.codepig.stuffnote.View.CustomView.ScaleTextView
            app:textSizePx="32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitle"
            android:text="备注详情" />

        <net.codepig.stuffnote.View.CustomView.ScaleTextView
            app:textSizePx="32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitle"
            android:text="色彩" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>